<UserControl x:Class="Cinema_MVVM_PROJECT_WPF.Views.UserControls.CinemaHomeUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cinema_MVVM_PROJECT_WPF.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1200">
    <Grid>
        <Button Command="{Binding AdminCommand}" FontFamily="Comic Sans CS" Foreground="{StaticResource thirdColor}" FontWeight="ExtraBold" Background="{StaticResource mainColor}" FontSize="32" Content="Admin" Margin="50,300,975,90" Width="180" Height="60" Click="Button_Click"/>
        <Image Source="/Views/ParkCinema.png" Margin="80,60,690,270"/>
        <Button Command="{Binding UserCommand}" FontFamily="Comic Sans CS"  Foreground="{StaticResource thirdColor}" Background="{StaticResource mainColor}" FontWeight="ExtraBold" Margin="306,300,714,90"  FontSize="40" Content="User" Width="180" Height="60"/>
    </Grid>
</UserControl>
